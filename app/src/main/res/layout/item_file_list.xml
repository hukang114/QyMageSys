<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin10"
        android:paddingBottom="@dimen/margin10">


        <ImageView
            android:id="@+id/file_img"
            android:layout_width="@dimen/margin50"
            android:layout_height="@dimen/margin50"
            android:layout_marginLeft="@dimen/margin10"
            android:src="@mipmap/file_ioc" />

        <TextView
            android:id="@+id/file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginTop="@dimen/margin5"
            android:layout_marginRight="@dimen/margin5"
            android:layout_toLeftOf="@+id/file_del_img"
            android:layout_toRightOf="@+id/file_img"
            android:text="@string/app_name"
            android:textColor="@color/rizhi_color" />

        <TextView
            android:id="@+id/file_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/file_name"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginTop="@dimen/margin5"
            android:layout_toRightOf="@+id/file_img"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_13" />


        <ImageView
            android:id="@+id/file_del_img"
            android:layout_width="@dimen/margin20"
            android:layout_height="@dimen/margin20"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin30"
            android:src="@mipmap/caccel_ioc" />

    </RelativeLayout>

    <View
        android:id="@+id/div_file_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/div_color" />

</LinearLayout>