<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/baoxiao_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin15"
            android:text="报销明细(1)" />

        <TextView
            android:id="@+id/delete_btn"
            android:layout_width="@dimen/margin50"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin15"
            android:gravity="center"
            android:text="@string/delete_txt"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingTop="@dimen/margin5"
            android:text="*"
            android:textColor="@color/xinghao_color"
            android:textSize="@dimen/text_size_30" />


        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin2"
            android:layout_toRightOf="@+id/tv_1"
            android:text="@string/baoxiaojine_txt"
            android:textColor="@color/rizhi_color"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/baoxiao_money_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin20"
            android:layout_toRightOf="@+id/tv_2"
            android:background="@color/white"
            android:gravity="center_vertical|end"
            android:hint="请输入报销金额"
            android:textColor="@color/item_color"
            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingTop="@dimen/margin5"
            android:text="*"
            android:textColor="@color/xinghao_color"
            android:textSize="@dimen/text_size_30" />

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin2"
            android:layout_toRightOf="@+id/tv_3"
            android:text="@string/baoxiao_cate_txt"
            android:textColor="@color/rizhi_color"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/baoxiao_cate_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin10"
            android:layout_toRightOf="@+id/tv_4"
            android:background="@color/white"
            android:drawableRight="@mipmap/right_ioc_small"
            android:gravity="center_vertical|end"
            android:hint="@string/select_txt"
            android:textColor="@color/item_color"
            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingTop="@dimen/margin5"
            android:text="*"
            android:textColor="@color/xinghao_color"
            android:textSize="@dimen/text_size_30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin2"
            android:layout_marginTop="@dimen/margin10"
            android:layout_toRightOf="@+id/tv_5"
            android:text="@string/feiyong_mx_txt"
            android:textColor="@color/rizhi_color"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/baoxiao_content"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/tv_5"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginRight="@dimen/margin15"
            android:background="@color/white"
            android:gravity="center_vertical|top"
            android:hint="@string/feiyong_mx_ms_txt"
            android:textColor="@color/item_color"
            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginTop="@dimen/margin10"
            android:text="@string/uplod_pic_txt"
            android:textColor="@color/rizhi_color"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyc_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginRight="@dimen/margin15"
            android:layout_marginTop="10dp"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>


</LinearLayout>