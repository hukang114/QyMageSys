<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="@dimen/margin60"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin5"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/headimg"
            android:layout_width="@dimen/margin40"
            android:layout_height="@dimen/margin40"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:src="@mipmap/def_logo_headimg" />

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headimg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/rizhi_color"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/caccel_ioc"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin5"
            android:src="@mipmap/caccel_ioc" />

    </RelativeLayout>

</LinearLayout>