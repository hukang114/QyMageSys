<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/margin90"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/frg_selc_all"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:button="@drawable/addr_item_check_state"
            android:visibility="visible" />


        <TextView
            android:id="@+id/name_tv"
            android:layout_width="@dimen/margin48"
            android:layout_height="@dimen/margin48"
            android:layout_marginLeft="@dimen/margin5"
            android:gravity="center"
            android:text="名字"
            android:textColor="@color/rizhi_color"
            android:visibility="visible" />


    </LinearLayout>
</LinearLayout>