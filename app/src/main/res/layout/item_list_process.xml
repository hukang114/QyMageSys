<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlTimeline"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginTop="@dimen/margin0">

            <TextView
                android:id="@+id/tvDot"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin0"
                android:background="@drawable/timelline_dot_normal"
                android:gravity="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/centet_div"
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:layout_below="@id/tvDot"
                android:layout_centerHorizontal="true"
                android:background="#999"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvDot_e"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@+id/centet_div"
                android:layout_centerHorizontal="true"
                android:layout_margin="0dp"
                android:background="@drawable/timelline_dot_normal"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin0"
                    android:text="@string/app_name"
                    android:textColor="@color/item_color"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/comment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_name"
                    android:layout_marginTop="@dimen/margin10"
                    android:hint="" />

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/margin0"
                    android:layout_marginRight="@dimen/margin15"
                    android:text="" />


                <TextView
                    android:id="@+id/tv_ohter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_name"
                    android:layout_marginTop="@dimen/margin10" />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>