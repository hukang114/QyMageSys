<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background"
        android:orientation="vertical">

        <com.qymage.sys.common.widget.MeTitle
            android:id="@+id/metitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cTxt="@string/info_security" />


        <LinearLayout
            android:id="@+id/old_psdlayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/margin10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <EditText
                android:id="@+id/old_pwd_et"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/psd_ioc"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="请输入旧密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:maxLines="1"
                android:textColorHint="@color/login_text_hint_color"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/div_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/pwd_et"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/psd_ioc"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="请设置新密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:maxLines="1"
                android:textColorHint="@color/login_text_hint_color"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/div_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/pwd2_et"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/psd_ioc"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="请再次设置新密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:maxLines="1"
                android:textColorHint="@color/login_text_hint_color"
                android:textSize="15sp" />

        </LinearLayout>


        <Button
            android:id="@+id/send_bt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginRight="@dimen/margin15"
            android:layout_marginTop="55dp"
            android:background="@drawable/save_btn_style"
            android:text="确  定"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>

</layout>
