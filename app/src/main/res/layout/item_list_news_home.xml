<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_margin="@dimen/margin15"
        android:background="@drawable/item_search_edt_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/serach_ioc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="@string/srarch_txt"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/msg_cate_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin15"
            android:src="@mipmap/msg_cate1" />

        <TextView
            android:id="@+id/msg_cate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginTop="@dimen/margin5"
            android:layout_toRightOf="@+id/msg_cate_img"
            android:text="工作通知"
            android:textColor="@color/item_color"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/msg_cate_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msg_cate_title"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/msg_cate_num"
            android:layout_toRightOf="@+id/msg_cate_img"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="[请假类]" />


        <TextView
            android:id="@+id/msg_cate_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/msg_cate_title"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin15"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_msg_num_style"
            android:gravity="center"
            android:paddingBottom="@dimen/margin2"
            android:paddingLeft="@dimen/margin10"
            android:paddingRight="@dimen/margin10"
            android:paddingTop="@dimen/margin2"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/date_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin15"
            android:layout_marginTop="@dimen/margin5"
            android:text="2019年1月24" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/margin10"
        android:layout_marginLeft="@dimen/margin75"
        android:layout_marginTop="@dimen/margin10"
        android:background="@color/div_color" />


</LinearLayout>